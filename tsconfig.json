{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react-native",
        "lib":[ "es2015", "es2016" ],
        "module": "es6",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "paths": {
            "@vovkasm/react-native-sound": ["types/react-native-sound.d.ts"],
            "jest": ["node_modules/@types/jest/index.d.ts"],
            "react-native-fs": ["types/react-native-fs.d.ts"],
            "react-native-navigation-lite": ["react-native-navigation-lite/src/index"]
        },
        "preserveSymlinks": true,
        "strict": true,
        "target": "es6",
        "typeRoots": ["types"],
        "types": ["react", "react-native"]
    },
    "exclude": [ "jest", "node_modules", "scripts" ]
}
